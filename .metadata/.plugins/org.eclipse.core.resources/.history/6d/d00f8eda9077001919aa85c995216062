package com.woniuxy.classobject.relearn;

/**
 * 魔法师以魔法球攻击，以屏障作为防御
 * 
 * @author 小虫子的小日常
 *
 */
public class Enchanter extends Role {

	public Enchanter(int attackPower, int defensivePower, int physicalPower) {
		super(attackPower, defensivePower, physicalPower);
	}

	@Override
	public void attack() {
		System.out.println("用魔法球攻击了对方，造成" + attackPower + "点伤害");
	}
	@Override
	public void defense() {
		System.out.println("用屏障防守，抵御了"+defensivePower+"点伤害");
	}

}
